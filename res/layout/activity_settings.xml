<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:orientation="vertical" >

    <Switch
        android:id="@+id/settings_switch_keepName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:onClick="switchClick"
        android:text="@string/settings_activity_keepLastName" />

    <Switch
        android:id="@+id/settings_switch_tripp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="switchClick"
        android:text="@string/settings_activity_tripp"/>

    <LinearLayout
        android:id="@+id/settings_linearLayout_colors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <View
            android:id="@+id/settings_view_playerColor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="#D5D5DA"
            android:onClick="showColorPicker"/>

        <View
            android:id="@+id/settings_view_npcColor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="#D5D5DA"
            android:onClick="showColorPicker"/>
        
    </LinearLayout>

</LinearLayout>